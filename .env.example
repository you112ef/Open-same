# Open-Same Environment Configuration (Same.AI Replica)
# Copy this file to .env and fill in your values

# Application
ENVIRONMENT=development
VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opensame
DB_USER=opensame
DB_PASSWORD=opensame_password
DB_SSLMODE=disable
DB_MAX_CONNS=100

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=opensame
RABBITMQ_PASS=opensame_password
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h
JWT_ISSUER=open-same

# Rate Limiting
RATE_LIMIT=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_ENVIRONMENT=development

# SDK Configuration
SDK_API_URL=http://localhost:8000
SDK_WS_URL=ws://localhost:8000

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# AI Services Configuration (Same.AI Core Features)
# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4000

# Local LLM Configuration (Optional)
LOCAL_LLM_ENABLED=false
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2:13b

# AI Content Generation Settings
AI_CONTENT_ENABLED=true
AI_SUGGESTIONS_ENABLED=true
AI_TEMPLATES_ENABLED=true
AI_COLLABORATION_ENABLED=true

# AI Rate Limiting
AI_RATE_LIMIT=50
AI_MAX_CONCURRENT_REQUESTS=10

# AI Model Fallback
AI_FALLBACK_ENABLED=true
AI_FALLBACK_MODEL=gpt-3.5-turbo

# External Services (Optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# OAuth Providers (Optional)
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret

# File Storage (Optional)
# S3_BUCKET=your-s3-bucket
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key

# Analytics (Optional)
# ANALYTICS_ENABLED=false
# GOOGLE_ANALYTICS_ID=your-ga-id
# MIXPANEL_TOKEN=your-mixpanel-token

# Security
CORS_ORIGIN=http://localhost:3000
SECURE_COOKIES=false
SESSION_SECRET=your-session-secret-change-in-production

# Development
DEBUG=true
HOT_RELOAD=true