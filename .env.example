# Open-Same Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development
VERSION=1.0.0

# Server Configuration
API_PORT=8080
API_HOST=0.0.0.0
READ_TIMEOUT=15s
WRITE_TIMEOUT=15s
IDLE_TIMEOUT=60s

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opensame
DB_USER=opensame
DB_PASSWORD=opensame_password
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=opensame
RABBITMQ_PASS=opensame_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_HOURS=168

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT=100.0

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080

# Cloudflare Pages Configuration (for production)
# CF_PAGES_URL=https://your-app.pages.dev
# CF_PAGES_BRANCH=main
# CF_PAGES_COMMIT_SHA=your-commit-sha